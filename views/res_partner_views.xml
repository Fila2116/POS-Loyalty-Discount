<odoo>
    <record id="view_partner_form_loyalty" model="ir.ui.view">
        <field name="name">res.partner.form.loyalty</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

            
            <xpath expr="//page[@name='sales_purchases']" position="inside">
                <group string="Loyalty Program">
                    <field name="loyalty_points"/>
                    <field name="loyalty_tier" readonly="1"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='credit_limit']" position="after">
                <field name="loyalty_points"
                       groups="pos_loyalty_discount.group_loyalty_manager"/>
            </xpath>

        </field>
    </record>
</odoo>
