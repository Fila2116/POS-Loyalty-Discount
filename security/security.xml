<odoo>
    <record id="module_category_pos_loyalty" model="ir.module.category">
        <field name="name">POS Loyalty</field>
        <field name="description">Access rights for POS Loyalty and Discount Management</field>
        <field name="sequence">25</field>
    </record>

    <record id="group_loyalty_manager" model="res.groups">
        <field name="name">Loyalty Manager</field>
        <field name="category_id" ref="pos_loyalty_discount.module_category_pos_loyalty"/>
    </record>

    <record id="pos_discount_rule_loyalty_manager_rule" model="ir.rule">
        <field name="name">POS Discount Rule - Loyalty Manager</field>
        <field name="model_id" ref="model_pos_discount_rule"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('pos_loyalty_discount.group_loyalty_manager'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="1"/>
        <field name="perm_create" eval="1"/>
        <field name="perm_unlink" eval="1"/>
    </record>

    <record id="pos_discount_rule_user_readonly_rule" model="ir.rule">
        <field name="name">POS Discount Rule - User Readonly</field>
        <field name="model_id" ref="model_pos_discount_rule"/>
        <field name="domain_force">[(1,'=',1)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="1"/>
        <field name="perm_write" eval="0"/>
        <field name="perm_create" eval="0"/>
        <field name="perm_unlink" eval="0"/>
    </record>

</odoo>
